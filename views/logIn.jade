// Log in view that extends layout
extends layout

block navBar
    div#nav-menu
        table#table-nav
            tr
                // td: a(onClick='alert("log-in was clicked");') Log-In
                td: a(href='http://localhost:3000/') Log-In
            tr
                td: a(onClick='alert("Contacting Admin");') Contact Administrator

block content
    h2 NSP Library System
    div#log-in
        form(action='/userlogin', method='post')
            table
                tr
                    td: label username: 
                    td: input(id='uname', type='text', size=50)
                tr
                    td: label password:
                    td: input(id='pword', type='password', size=50)
                tr
                    td: input(id='loginForm', type='submit')
